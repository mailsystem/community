{% extends 'OroUIBundle:actions:update.html.twig' %}

{% set formAction = form.vars.value.id ? path('mailsystem_recipient_update', { 'id': form.vars.value.id }) : path('mailsystem_recipient_create') %}
{% set email = form.vars.value.email ? form.vars.value.email : 'N/A' %}
{% oro_title_set({ params : {"%request.email%": email} }) %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('mailsystem_recipient_delete') %}
        {{ UI.deleteButton({
        'dataUrl': path('mailsystem_recipient_delete', {'id': form.vars.value.id}),
        'dataRedirect': path('mailsystem_recipient_index'),
        'aCss': 'no-hash remove-button',
        'id': 'btn-remove-contact-request-form',
        'dataId': form.vars.value.id,
        'entity_label': 'mailsystem.recipient.entity_label'|trans,
        }) }}
        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.button({'path' : path('mailsystem_recipient_index'), 'title' : 'Cancel'|trans, 'label' : 'Cancel'|trans}) }}
    {% set html = UI.saveAndCloseButton() %}
    {% if resource_granted('mailsystem_recipient_update') %}
        {% set html = html ~ UI.saveAndStayButton() %}
    {% endif %}
    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
        'entity':      form.vars.value,
        'indexPath':   path('mailsystem_recipient_index'),
        'indexLabel': 'mailsystem.recipient.entity_plural_label'|trans,
        'entityTitle': email
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'mailsystem.recipient.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'mailsystem-recipient' %}

    {% set dataBlocks = [{
    'title': 'General'|trans,
    'class': 'active',
    'subblocks': [{
    'title': 'Recipient Information'|trans,
    'data': [
        form_row(form.first_name),
        form_row(form.last_name),
        form_row(form.email),
        form_row(form.phone),
        form_row(form.skype),
        form_row(form.position),
        form_row(form.company),
        form_row(form.birth_date),
        form_row(form.description),
        form_row(form.maillists)
    ]}
    ]
    }] %}

    {% set data = {
    'formErrors': form_errors(form)? form_errors(form) : null,
    'dataBlocks': dataBlocks,
    } %}
    {{ parent() }}
{% endblock content_data %}
